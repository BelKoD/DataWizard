{
  "name": "belkod/datawizard",
  "description": "Небольшие классы-помощники для преобразования чисел или временных данных в строчное представление.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "BelKoD",
      "email": "developer@belkod.ru",
      "homepage": "https://github.com/BelKoD/DataWizard"
    }
  ],
  "require": {
    "php": ">=7.0",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
	  "ext-intl": "*"
  },
  "autoload": {
    "psr-4": {
      "BelKoD\\DataWizard\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BelKoD\\tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}